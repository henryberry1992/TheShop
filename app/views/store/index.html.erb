<%=stylesheet_link_tag "store" %>
<% provide(:title, "Gorgeous handmade jewellery for fashionistas") %>

<% if notice %>
<p id="notice text-center"><%= notice %></p>
<% end %>

<div id = "myCarousel" class = "col-xd-12 carousel slide" data-ride = "carousel">
  <!-- Carousel Indicator -->
  <ol class = "carousel-indicators">
    <li data-target = "#myCarousel" data-slide-to = " 0 " class = "active"></li>
    <li data-target = "#myCarousel" data-slide-to = " 1 "></li>
    <li data-target = "#myCarousel" data-slide-to = " 2 "></li>
  </ol>

  
  <!-- Pictures inside Carousel -->
  <div class= "carousel-inner" role = "listbox">
    <div class = "item active">
      <%= image_tag("potato.jpeg", :alt => "potato1") %>
      <div class = "carousel-caption">
        <h2> Potatoes 30% this season!</h2>
        <p> Get your starch gold today!</p>
      </div>
    </div>

    <div class = "item">
      <%= image_tag("potato.jpeg", :alt => "potato2") %>
      <div class = "carousel-caption">
        <h2>Free shipping on orders above $50!</h2>
        <p>Save them shekels you gold hoarding jew!</p>
      </div>
    </div>

    <div class = "item">
      <%= image_tag("potato.jpeg", :alt => "potato3") %>
      <div class = "carousel-caption">
        <h2>New genetically modified potatoes available now!</h2>
        <p>Add some chemical-x for guaranteed mutation!</p>
      </div>
    </div>

  </div>
  
  <!-- Carousel buttons -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>  

<h3 class = "text-center"> Jewelleries </h3>
<% @products.in_groups_of(4, false).each do |group| %>
  <div class='product_list text-center'>
    <% group.each do |product| %>
      <div class='product_detail col-lg-3 col-md-3 col-xs-12 text-center'>
        <div class = "product_image center-block">  
          <%= image_tag(product.image.url(:medium), class: "img-responsive") %>
        </div>
        <h3><%= product.name %></h3>
        <div><%= number_to_currency(product.price) %></div> 
        <%= button_to 'Add to Cart', line_items_path(product_id: product), class: 'btn btn-info btn-sm margin-btm', remote: true %>
      </div>
    <% end %>
  </div>
<% end %>
  