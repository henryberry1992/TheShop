<%=stylesheet_link_tag "store" %>
<% provide(:title, "Gorgeous handmade jewellery for fashionistas") %>

<div id = "myCarousel" class = "col-xd-12 carousel slide" data-ride = "carousel">
  <!-- Carousel Indicator -->
  <ol class = "carousel-indicators">
    <li data-target = "#myCarousel" data-slide-to = " 0 " class = "active"></li>
    <li data-target = "#myCarousel" data-slide-to = " 1 "></li>
    <li data-target = "#myCarousel" data-slide-to = " 2 "></li>
  </ol>

  
  <!-- Pictures inside Carousel -->
  <div class= "carousel-inner" role = "listbox">
    <div class = "item active">
      <%= image_tag("potato.jpeg", :alt => "potato1") %>
      <div class = "carousel-caption">
        <h2> Potatoes 30% this season!</h2>
        <p> Get your starch gold today!</p>
      </div>
    </div>

    <div class = "item">
      <%= image_tag("potato.jpeg", :alt => "potato2") %>
      <div class = "carousel-caption">
        <h2>Free shipping on orders above $50!</h2>
        <p>Save them shekels you gold hoarding jew!</p>
      </div>
    </div>

    <div class = "item">
      <%= image_tag("potato.jpeg", :alt => "potato3") %>
      <div class = "carousel-caption">
        <h2>New genetically modified potatoes available now!</h2>
        <p>Add some chemical-x for guaranteed mutation!</p>
      </div>
    </div>

  </div>
  
  <!-- Carousel buttons -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class = "signup text-center">
  <%= link_to "Sign up now!", signup_path, :class => "signupbutton btn btn-lg btn-primary" %>
</div>

<table class = "products col-xs-12 col-md-12">
  <% @products.each do |product| %>
    <tr class = "<%= cycle('product_odd', 'product_even') %>">

      <td class = " text-left product_image col-xs-4 col-md-4">
        <%= image_tag product.image.url(:thumb) %>
      </td>

      <td class = "product_description col-xs-4 col-md-4">
        <dt class = "product_name">
          <%= product.name %>
        </dt>
        <dt class = "product_price">
          <%= number_to_currency(product.price) %>
        </dt>
        <dd class = "product_description">
          <%= truncate(product.description, length: 80) %>
        </dd>
      </td>

      <td class = "list_actions col-xs-4 col-md-4">
        <%= link_to 'Show', product %><br>
        <%= link_to 'Edit', edit_product_path(product) %><br>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td> 
    </tr>
  <% end %>
</table>