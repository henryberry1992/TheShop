<%=stylesheet_link_tag "products" %>
<% provide(:title, "Product Listing") %>

<h1 class = "text-center col-md-12 col-xs-12"> Product Listing </h1>

<table class = "products col-xs-12 col-md-12">
  <% @products.each do |product| %>
    <tr class = "<%= cycle('product_odd', 'product_even') %>">

      <td class = " text-left product_image col-xs-4 col-md-4">
        <%= image_tag product.image.url(:thumb) %>
      </td>

      <td class = "product_description col-xs-4 col-md-4">
        <dt class = "product_name">
          <%= product.name %>
        </dt>
        <dt class = "product_price">
          <%= number_to_currency(product.price) %>
        </dt>
        <dd class = "product_description">
          <%= truncate(product.description, length: 50) %>
        </dd>
      </td>

      <td class = "list_actions col-xs-4 col-md-4">
        <%= link_to 'Show', product %><br>
        <%= link_to 'Edit', edit_product_path(product) %><br>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td> 
    </tr>
  <% end %>
</table>

<br>

<%= link_to 'New Product', new_product_path %>