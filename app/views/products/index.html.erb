
<%=stylesheet_link_tag "custom" %>
<% provide(:title, "Product listing") %>
<p id="notice"><%= notice %></p>

<div id = "myCarousel" class = "carousel slide" data-ride = "carousel">
  <!-- Carousel Indicator -->
  <ol class = "carousel-indicators">
    <li data-target = "#myCarousel" data-slide-to = " 0 " class = "active"></li>
    <li data-target = "#myCarousel" data-slide-to = " 1 "></li>
    <li data-target = "#myCarousel" data-slide-to = " 2 "></li>
  </ol>

  
  <!-- Pictures inside Carousel -->
  <div class= "carousel-inner" role = "listbox">
    <div class = "item active">
      <%= image_tag("potato.jpeg", :alt => "potato1") %>
      <div class = "carousel-caption">
        <h2> Potatoes 30% this season!</h2>
        <p> Get your starch gold today!</p>
      </div>
    </div>

    <div class = "item">
      <%= image_tag("potato.jpeg", :alt => "potato2") %>
      <div class = "carousel-caption">
        <h2>Free shipping on orders above $50!</h2>
        <p>Save them shekels you gold hoarding jew!</p>
      </div>
    </div>

    <div class = "item">
      <%= image_tag("potato.jpeg", :alt => "potato3") %>
      <div class = "carousel-caption">
        <h2>New genetically modified potatoes available now!</h2>
        <p>Add some chemical-x for guaranteed mutation!</p>
      </div>
    </div>

  </div>
  
  <!-- Carousel buttons -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr> 
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= image_tag product.image.url(:thumb) %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
